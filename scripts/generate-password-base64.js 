// Script to generate base64 encoded password hash for admin login
// Usage: node scripts/generate-password-base64.js your-password

const bcrypt = require('bcryptjs');

const password = process.argv[2];

if (!password) {
  console.error('❌ Geef een wachtwoord op als argument');
  console.log('Gebruik: node scripts/generate-password-base64.js jouw-wachtwoord');
  process.exit(1);
}

const hash = bcrypt.hashSync(password, 10);
const base64Hash = Buffer.from(hash).toString('base64');

console.log('\n✅ Wachtwoord hash gegenereerd!');
console.log('\nVoeg deze toe aan je .env bestand:');
console.log('─────────────────────────────────────────');
console.log(`ADMIN_PASSWORD_HASH_BASE64=${base64Hash}`);
console.log('─────────────────────────────────────────');
console.log('\nOriginele hash (voor referentie):');
console.log(hash);
console.log('\n');